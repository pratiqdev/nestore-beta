{
  "name": "nestore",
  "version": "1.0.4",
  "description": "",
  "keywords": [
    "state-management",
    "event-emitter"
  ],
  "author": "Event based state management",
  "license": "UNLICENSED",
  "main": "index.js",
  "type": "module",
  "types": "dist/nestore.d.ts",
  "scripts": {
    "//& DEV                                                                                  ": "",
    "dev:clear": "clear && echo \"[dev] Purge, rebuild and test Nestore\"",
    "//>dev:lint": "Lint with ESLint and auto-fix if possible",
    "//_CONFIGURE_LINTING_RULES:lint": "eslint --fix -c .eslintrc.json .",
    "//>dev:clean": "Remove the `./nestore/dist/` directory",
    "dev:clean": "rm -rf ./dist",
    "//>dev:esm": "Build as standard es module package",
    "dev:esm": "tsc -p tsconfig.json",
    "//>dev:mocha": "Test with mocha custom config",
    "dev:mocha": "mocha test/unit/ --config .mocharc.cjs",
    "//& BUILD                                                                                ": "",
    "build:clear": "clear && echo \"[build] Lint, purge and rebuild all artifacts \"",
    "//>build:lint": "Lint with ESLint and auto-fix if possible",
    "// _CONFIGURE_LINTING_RULES:lint": "eslint --fix -c .eslintrc.json .",
    "//>build:clean": "remove ESM and UMD dist directories",
    "build:clean": "rm -rf ./dist && rm -rf ./dist_umd",
    "//>build:esm": "Build ESM",
    "build:esm": "tsc -p tsconfig.json",
    "//>build:umd": "Build UMD - in browser testing with esm required before building umd",
    "//_build:umd": "tsc -p tsconfig.umd.json",
    "//>build:hook": "Build the nestore react hook",
    "build:hook": "cd ./adapters/useNestore && yarn super",
    "//>build:pers": "Build the nestore persistence adapter",
    "build:pers": "cd ./adapters/persistAdapter && yarn super",
    "//>build:mongo": "Build the nestore mongodb adapter",
    "build:mongo": "cd ./adapters/mongoAdapter && yarn super",
    "//& TEST                                                                                 ": "",
    "test:clear": "clear && echo \"[test] Run all unit tests with root mocha config\"",
    "//>test:mocha": "Test with mocha custom config",
    "test:nestore": "mocha test/unit/tests --config .mocharc.cjs",
    "//& PUBLISH                                                                              ": "",
    "//>pub:bump": "Increment the npm patch version by 1",
    "pub:bump": "npm version patch --force",
    "//>pub:pub": "Publish the public npm package",
    "pub:pub": "npm publish --access public",
    "//& RUN                                                                                  ": "",
    "debug": "DEBUG=nestore:** npm-run-all test:*",
    "build": "npm-run-all build:*",
    "test": "npm-run-all test:*",
    "build-dev": "npm-run-all dev:*",
    "watch": "nodemon --watch src --exec npm-run-all dev:*",
    "pub": "npm-run-all pub:*"
  },
  "files": [
    "./index.js",
    "./README.md",
    "dist/"
  ],
  "dependencies": {
    "debug": "^4.3.4",
    "eventemitter2": "^6.4.7",
    "lodash-es": "^4.17.21",
    "mongoose": "^6.6.5"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^2.0.2",
    "@types/debug": "^4.1.7",
    "@types/lodash-es": "^4.17.6",
    "@types/mongoose": "^5.11.97",
    "@types/node": "17.0.29",
    "@types/react": "^18.0.21",
    "@types/spellchecker": "^3.5.0",
    "@types/underscore": "^1.11.4",
    "chai": "^4.3.6",
    "deepmerge": "^4.2.2",
    "dotenv": "^16.0.3",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.18",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.8.3"
  },
  "peerDependencies": {
    "mongodb": "^4.10.0",
    "react": "^18.2.0"
  }
}
