{
  "name": "nestore",
  "version": "1.4.4",
  "description": "",
  "main": "index.js",
  "type": "module",
  "types": "dist/types.d.ts",
  "files": [
    "./index.js",
    "./README.md",
    "dist/"
  ],
  "scripts": {
    "watch-test": "clear && tsc && nodemon",
    "test-nobuild": "clear && mocha --config .mocharc.cjs",
    "debug": "clear && tsc && DEBUG=nestore:** mocha --config .mocharc.cjs",
    "runnit": "clear && rm -rf ./dist && tsc && DEBUG=nestore:** node index.js",
    "runnit-quiet": "clear && tsc && node index.js",
    "//_1": "",
    "//& DEV                                            ": "",
    "//=dev:clean": "Remove the dist directory",
    "dasdev:lint": "eslint --fix -c .eslintrc.json .",
    "//=dev:esm": "Build as standard es module package",
    "dev:clean": "rm -rf ./dist",
    "//=dev:lint": "Run ESLint with autofix",
    "dev:esm": "tsc",
    "//=dev:hook": "Build the nestore react hook",
    "dev:hook": "cd ../utils/useNestore && yarn build",
    "//=dev:pers": "Build the nestore persistence adapter",
    "dev:pers": "cd ../utils/persistAdapter && yarn build",
    "//=dev:mongo": "Build the nestore mongodb adapter",
    "dev:mongo": "cd ../utils/mongoAdapter && yarn build",
    "//=dev:mocha": "Test with mocha custom config",
    "dev:mocha": "mocha _test/unit/ --config .mocharc.dev.cjs",
    "//_2": "",
    "//& BUILD                                          ": "",
    "//=build:clean": "Remove the dist directory",
    "build:lint": "eslint --fix -c .eslintrc.json .",
    "//=build:esm": "Build as standard es module package",
    "build:clean": "rm -rf ./dist && rm -rf ./dist_umd",
    "//=build:lint": "Run ESLint with autofix",
    "build:esm": "tsc -p tsconfig.json",
    "//=build:umd": "Build as umd module",
    "build:umd": "tsc -p tsconfig.umd.json",
    "//=build:hook": "Build the nestore react hook",
    "build:hook": "cd ../utils/useNestore && yarn build",
    "//=build:pers": "Build the nestore persistence adapter",
    "build:pers": "cd ../utils/persistAdapter && yarn build",
    "//=build:mongo": "Build the nestore mongodb adapter",
    "build:mongo": "cd ../utils/mongoAdapter && yarn build",
    "//_3": "",
    "//& TEST                                           ": "",
    "//=test:mocha": "Test with mocha custom config",
    "test:mocha": "mocha --config .mocharc.cjs",
    "//_4": "",
    "//& PUBLISH                                        ": "",
    "//=pub:bump": "Increment the npm patch version by 1",
    "pub:bump": "npm version patch --force",
    "//=pub:pub": "Publish the public npm package",
    "pub:pub": "npm publish --access public",
    "//_5": "",
    "//& RUN                                             ": "",
    "build": "npm-run-all build:*",
    "test": "npm-run-all test:*",
    "dev": "npm-run-all dev:*",
    "watch": "nodemon --watch src --exec npm-run-all dev:*",
    "pub": "npm-run-all pub:*"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "eventemitter2": "^6.4.7",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@open-wc/building-rollup": "^2.0.2",
    "@types/debug": "^4.1.7",
    "@types/lodash-es": "^4.17.6",
    "@types/mongoose": "^5.11.97",
    "@types/node": "17.0.29",
    "@types/react": "^18.0.21",
    "@types/spellchecker": "^3.5.0",
    "@types/underscore": "^1.11.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.40.1",
    "chai": "^4.3.6",
    "debug": "^4.3.4",
    "deepmerge": "^4.2.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.25.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.1.0",
    "eslint-plugin-react": "^7.31.10",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.18",
    "npm-run-all": "^4.1.5",
    "typescript": "*"
  },
  "peerDependencies": {
    "mongodb": "^4.10.0",
    "react": "^18.2.0"
  }
}
